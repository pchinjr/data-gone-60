{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node", "aws-lambda", "jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  